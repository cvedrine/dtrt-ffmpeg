#! /usr/bin/env zsh
# TODO: probably mksh
# TODO: probably in a lib

. dtrt-ffmpeg.zsh

overview () {
    typeset -a thumb
    typeset -a strips
    local wdir=overview
    mkdir -p $wdir
    local video=${1?name of the video} s=
    # $use_slurm &&
    #     thumb=( slurm ffmpegthumbnailer ) ||
    thumb=( ffmpegthumbnailer )
    shift
    (( $+1 )) || set {0..99}
    for it {
        s=$wdir/$it.png
        strips+=$s
        $thumb -t $it -s 114:64 -c png -i $video -o $s &
    }
    wait
    montage $strips -tile $#'x1' -geometry +0+0 overview.png
}


overview "$@"

